<%= render 'users/list', user:@user ,book:@newbook  %>
<div class="col-lg-8">  <!-- この行を追加 -->
<h1>Book detail</h1>

<table class="table">
  <tr>
    <td><%= link_to (attachment_image_tag @book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg"), user_path(@book.user.id) %>
    <br><%= link_to @book.user.name,  user_path(@book.user.id) %></td>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>

    <% if @book.user == current_user %>
    <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-secondary" %></td>
    <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class: "btn btn-secondary" %></td>
    <% end %>

  </tr>



